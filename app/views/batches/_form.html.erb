<%= simple_form_for(@batch) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :size %>
    <%= f.input :brew_date %>
    <%= f.input :bottle_date %>
    <%= f.input :actual_original_gravity %>
    <%= f.input :actual_final_gravity %>
    <%= f.input :actual_abv %>
    <%= f.input :actual_aroma %>
    <%= f.input :actual_ibu %>
    <%= f.input :image %>
    <%= f.input :actual_flavor_profile %>
    <%= f.association :beer_style %>
    <%= f.association :recipe %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
